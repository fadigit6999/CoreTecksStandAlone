@model CoreTechs.Web.Models.ModelEntities.Employees

<form id="Employeeform">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="Name" class="col-sm-2 control-label"></label>
        <div class="col-sm-10">
            <input asp-for="Name" class="form-control" placeholder="Enter Name" required autocomplete="off" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="Phone" class="col-sm-2 control-label"></label>
        <div class="col-sm-10">
            <input asp-for="Phone" class="form-control" placeholder="Enter Phone" required />
            <span asp-validation-for="Phone" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="Address" class="col-sm-2 control-label"></label>
        <div class="col-sm-10">
            <input asp-for="Address" class="form-control" placeholder="Enter Address" />
            <span asp-validation-for="Address" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="Salary" class="col-sm-2 control-label"></label>
        <div class="col-sm-10">
            <input asp-for="Salary" class="form-control" placeholder="Enter Salary" />
            <span asp-validation-for="Salary" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group mt-2">
        <div class="col-sm-offset-2 col-sm-10">
            <button id="submitEmployee" type="button" class="btn btn-primary">Submit</button>
            <a asp-controller="Home" asp-action="GetEmployee" class="btn btn-default">Cancel</a>
        </div>
    </div>
</form>
