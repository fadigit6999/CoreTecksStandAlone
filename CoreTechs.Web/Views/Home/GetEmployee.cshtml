@model List<CoreTechs.Web.Models.ModelEntities.Employees>

@section Head
{
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CoreTechs.Web</title>
    @* bootstrap 5 *@
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
}

@await Html.PartialAsync("~/Views/Shared/Home/_Header.cshtml")

<div class="container">
    <div class="jumbotron">
        <h1 class="text-center">Employee List</h1>
    </div>

    <div class="row">
        <div class="col-sm-6">
            <a href="/home/CreateEmployee" class="btn btn-default">Create Employee</a>
        </div>

    </div>

    <div class="panel panel-default" style="margin-top:10px">


        <!-- Table -->
        <table class="table table-bordered table-striped table-hover">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Name</th>
                    <th>Phone</th>
                    <th>Salary</th>
                    <th>Address</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var iteration in Model)
                {
                    <tr>
                        <td>@iteration.Id</td>
                        <td>@iteration.Name</td>
                        <td>@iteration.Phone</td>
                        <td>@iteration.Salary</td>
                        <td>@iteration.Address</td>

                        <td>
                            <a href="/home/UpdateEmployee/@iteration.Id" class="btn btn-primary">Edit</a>
                            <a href="/home/DeleteEmployee/@iteration.Id" class="btn btn-warning">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@await Html.PartialAsync("~/Views/Shared/Home/_Footer.cshtml")

@section Scripts
{
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    @* bootstrap 5 *@
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
}